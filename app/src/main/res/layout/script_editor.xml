<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#242431"
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/console_hint"
        android:inputType="textMultiLine"
        android:nestedScrollingEnabled="true"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:scrollbarThumbHorizontal="@color/cardview_light_background"
        android:scrollbarThumbVertical="@color/cardview_light_background"
        android:textColor="#078D16"
        android:textColorHint="#078D16"
        android:textColorLink="#3F51B5"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.995"
        tools:textColorHint="#078D16" />

</androidx.constraintlayout.widget.ConstraintLayout>